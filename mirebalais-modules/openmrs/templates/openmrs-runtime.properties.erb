connection.url=jdbc:mysql://localhost:3306/<%= @openmrs_db %>?autoReconnect=true&sessionVariables=storage_engine=InnoDB&useUnicode=true&characterEncoding=UTF-8
connection.username=<%= @openmrs_db_user %>
connection.password=<%= @openmrs_db_password %>

module.allow_web_admin=true
auto_update_database=<%= @openmrs_auto_update_database %>

junit.username=<%= @junit_username %>
junit.password=<%= @junit_password %>

commcare.username=<%= @cc_user_name %>
commcare.password=<%= @cc_user_password %>

remote_zlidentifier_url=<%= @remote_zlidentifier_url %>
remote_zlidentifier_username=<%= @remote_zlidentifier_username %>
remote_zlidentifier_password=<%= @remote_zlidentifier_password %>

haiti_hiv_emr_link_url=<%= @haiti_hiv_emr_link_url %>

lacolline_server_url=<%= @lacolline_server_url %>
lacolline_username=<%= @lacolline_username %>
lacolline_password=<%= @lacolline_password %>

activitylog_enabled=<%= @activitylog_enabled %>
terms_and_conditions_enabled=<%= @terms_and_conditions_enabled %>

pih.config=<%= @pih_config %>

initializer.startup.load=disabled

hibernate.generate_statistics=false

hibernate.c3p0.max_size=50
hibernate.c3p0.min_size=5
hibernate.c3p0.acquire_increment=5
hibernate.c3p0.timeout=3600
hibernate.c3p0.idle_test_period=300

mail.debug=false
mail.default_content_type=text/html
mail.from=<%= @smtp_username %>
mail.password=<%= @smtp_userpassword %>
mail.smtp.auth=true
mail.smtp.host=smtp.gmail.com
mail.smtp.port=465
mail.smtp.starttls.enable=true
mail.smtp.ssl.protocols=TLSv1.2
mail.transport.protocol=smtp
mail.user=<%= @openmrs_mail_user %>
mail.smtp.socketFactory.class=javax.net.ssl.SSLSocketFactory

# Authentication settings
authentication.scheme=<%= @openmrs_authentication_scheme %>
authentication.whiteList=/login.htm,/pihcore/login.page,/pihcore/loginSecret.page,/appui/session/getLoginLocations.action,/csrfguard,*.js,*.css,*.gif,*.jpg,*.png,*.ico,*.ttf,*.woff
authentication.scheme.2fa.type=org.openmrs.module.authentication.web.TwoFactorAuthenticationScheme
authentication.scheme.2fa.config.primaryOptions=basic
authentication.scheme.2fa.config.secondaryOptions=secret
authentication.scheme.basic.type=org.openmrs.module.pihcore.PihBasicAuthenticationScheme
authentication.scheme.basic.config.loginPage=/login.htm
authentication.scheme.basic.config.usernameParam=username
authentication.scheme.basic.config.passwordParam=password
authentication.scheme.secret.type=org.openmrs.module.authentication.web.SecretQuestionAuthenticationScheme
authentication.scheme.secret.config.loginPage=/pihcore/loginSecret.page