#!/bin/bash

USER=$1
PW=$2
DB=$3
TABLE=$4

RESULTS=$(mysql -u${USER} -p${PW} ${DB} -ssss -N -e "select count(*) from ${TABLE}" 2> /dev/null)
NUM_ROWS=0

RE='^[0-9]+$'
if [[ $RESULTS =~ $RE ]] ; then
    NUM_ROWS=$RESULTS
if

echo "$RESULTS rows"
if [[ "$RESULTS" == 0 ]]; then
    exit 1
else
    exit 0
fi