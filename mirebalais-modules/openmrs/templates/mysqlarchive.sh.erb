#!/bin/sh
#
# Backup cleanup and archiving script
#

DIR=/home/<%= @tomcat %>/backups
PREFIX='<%= @backup_file_prefix %>'

FILENAME=${PREFIX}_backup_20*.sql.7z
RELEASENAME=${PREFIX}_backup_release_*.sql.7z
#ARCHIVEFILE=${PREFIX}_backup_202???01-*.sql.7z

ARCHIVEFILE=$(ls -t1 |  head -n 1)
YEAR=$(date +"%Y")
MONTH=$(date +"%b")
DAY=$(date +"%d")

# Delete all pre-release backups older than 15 days
#find ${DIR}/sequences/${RELEASENAME} -mtime +15 -exec rm {} \;

# Create the archive directory
mkdir -p ${DIR}/archive
mkdir -p ${DIR}/archive/${YEAR}

# Archive database on first day of month
if(($DAY == 02));
then
      mv ${DIR}/sequences/${ARCHIVEFILE} ${DIR}/archive/${YEAR}
fi

# Delete all backups (older than 30 days)
find ${DIR}/sequences/ -name "*.7z" -type f -mtime +30 -exec rm -f {} \;

# Delete all backups (older than 10 days) in sequence folder if disk size if greater than 55 GB
disk_size1="$(df -k /dev/dm-0 | tail -1 | awk '{print $4}')"
if (($disk_size1<50000000)); then
find ${DIR}/sequences/ -name "*.7z" -type f -mtime +10 -exec rm -f {} \;
fi

# Delete folders in the archive directory only if the disk space is greater than 60 GB
disk_size="$(df -k /dev/dm-0 | tail -1 | awk '{print $4}')"
#
if (($disk_size<60000000)); then
# find all files under /home/tomcat7/backups/sequences/ and /home/tomcat7/backups/archive/ that are more than a day old and delete them
 find ${DIR}/archive/${YEAR} -name "*.7z" -type f -mtime +15 -exec rm -f {} \; 2>/dev/null
fi