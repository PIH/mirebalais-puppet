/var/lib/tomcat7/logs/catalina.out  {
  daily
  rotate 7
  size 10M
  copytruncate
  compress
  postrotate
    # reset ownership to comply with directory's permissions
    chown tomcat7.tomcat7 /var/lib/tomcat7/logs/catalina.out.*
  endscript
  notifempty
  missingok
}

/var/lib/tomcat7/logs/*.log {
  daily
  rotate 7
  notifempty
  missingok
  maxage 7
}

/home/tomcat7/.OpeMRS/openmrs.log {
  daily
  rotate 7
  notifempty
  missingok
  maxage 7
}

/home/tomcat7/.OpeMRS/initializer.log {
  daily
  rotate 7
  notifempty
  missingok
  maxage 7
}