version: "3.7"
services:
<% if @docker_mssql_image != "" %>
  sql-server-db:
    container_name: <%= @docker_mssql_container_name -%>
    image: <%= @docker_mssql_image -%>
    restart: unless-stopped
    ports:
      - "1433:1433"
    environment:
      SA_PASSWORD: "<%= @docker_mssql_sa_password -%>"
      ACCEPT_EULA: "Y"
      TZ:  <%= @server_timezone -%>
    volumes:
       - <%= @docker_mssql_volume_dir -%>:/var/opt/mssql/data
<% end %>

<% if @docker_mysql_image != "" %>
  mysql56:
    image: <%= @docker_mysql_image -%>
    restart: unless-stopped
    container_name: <%= @docker_mysql_container_name -%>
    ports:
      - "127.0.0.1:3356:3306"
    environment:
      MYSQL_ROOT_PASSWORD: "<%= @docker_mysql_user_password -%>"
      TZ: <%= @server_timezone -%>
    volumes:
       - <%= @docker_mysql_volume_dir -%>:/var/lib/mysql
<% end %>