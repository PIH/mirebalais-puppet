petl:
  maxConcurrentJobs: 7
  homeDir: "/opt/petl-ces"
  datasourceDir: "/opt/petl-ces/configurations/datasources"
  jobDir: "/opt/petl-ces/configurations/jobs"
  startup:
    jobs:
      - "create-partitions.yml"

executeCron:
  refreshOpenmrsData: "<%= @petl_ces_cron_time -%>"
  refreshCesCiData: ""

server:
  port: "<%= @petl_server_port -%>"

logging:
  level:
    root: "WARN"
    org.pih: "INFO"

spring:
  datasource:
    platform: "mssql"
    driver-class-name: "com.microsoft.sqlserver.jdbc.SQLServerDriver"
    url: "jdbc:sqlserver://<%= @petl_sqlserver_host -%>:<%= @petl_sqlserver_port -%>;databaseName=openmrs_ces_warehouse"
    username: "<%= @petl_sqlserver_user -%>"
    password: "<%= @petl_sqlserver_password -%>"
  jpa:
    hibernate:
      dialect: "org.hibernate.dialect.SQLServer2012Dialect"
  liquibase:
    database-change-log-table: "petl_database_change_log"
    database-change-log-lock-table: "petl_database_change_log_lock"

datasources:
  mysql:
    user: "<%= @petl_mysql_user -%>"
    password: "<%= @petl_mysql_password -%>"
    options: " <%= @petl_mysql_options -%>"

  openmrs:
