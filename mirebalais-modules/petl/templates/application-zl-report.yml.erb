petl:
  homeDir: "<%= @petl_home_dir -%>"
  datasourceDir: "<%= @petl_home_dir -%>/<%= @petl_config_dir -%>/datasources"
  jobDir: "<%= @petl_home_dir -%>/<%= @petl_config_dir -%>/jobs"
  startup:
    jobs:
      - "create-partitions.yml"

executeCron:
  refreshOpenmrsData: "<%= @petl_cron_time -%>"
  refreshHivData: ""
  refreshHumciData: ""

server:
  port: "<%= @petl_server_port -%>"

logging:
  level:
    root: "WARN"
    org.pih: "INFO"

spring:
  datasource:
    platform: "mssql"
    driver-class-name: "com.microsoft.sqlserver.jdbc.SQLServerDriver"
    url: "jdbc:sqlserver://<%= @petl_sqlserver_host -%>:<%= @petl_sqlserver_port -%>;databaseName=<%= @petl_sqlserver_databaseName -%>"
    username: "<%= @petl_sqlserver_user -%>"
    password: "<%= @petl_sqlserver_password -%>"
  jpa:
    hibernate:
      dialect: "org.hibernate.dialect.SQLServer2012Dialect"

# see: https://pihemr.atlassian.net/wiki/spaces/PIHEMR/pages/2397044737/ZL+Central+DataWarehouse+configuration+notes
datasources:
  mysql:
    user: "<%= @petl_mysql_user -%>"
    password: "<%= @petl_mysql_password -%>"
    options: " <%= @petl_mysql_options -%>"

  openmrs:
    cange:
      host: "0.0.0.0"
      port: "3359"
      databaseName: "<%= @petl_mysql_databaseName -%>"
      user: "${datasources.mysql.user}"
      password: "${datasources.mysql.password}"
      options: "${datasources.mysql.options}"
    hinche:
      host: "0.0.0.0"
      port: "3361"
      databaseName: "<%= @petl_mysql_databaseName -%>"
      user: "${datasources.mysql.user}"
      password: "${datasources.mysql.password}"
      options: "${datasources.mysql.options}"
    saint_marc_hsn:
      host: "0.0.0.0"
      port: "3357"
      databaseName: "<%= @petl_mysql_databaseName -%>"
      user: "${datasources.mysql.user}"
      password: "${datasources.mysql.password}"
      options: "${datasources.mysql.options}"
    lacolline:
      host: "0.0.0.0"
      port: "3360"
      databaseName: "<%= @petl_mysql_databaseName -%>"
      user: "${datasources.mysql.user}"
      password: "${datasources.mysql.password}"
      options: "${datasources.mysql.options}"
    thomonde:
      host: "0.0.0.0"
      port: "3358"
      databaseName: "<%= @petl_mysql_databaseName -%>"
      user: "${datasources.mysql.user}"
      password: "${datasources.mysql.password}"
      options: "${datasources.mysql.options}"
    mirebalais:
       host: "<%= @petl_mysql_host -%>"
       port: "<%= @petl_mysql_port -%>"
       databaseName: "<%= @petl_mysql_databaseName -%>"
       user: "${datasources.mysql.user}"
       password: "${datasources.mysql.password}"
       options: "${datasources.mysql.options}"

  warehouse:
       host: "<%= @petl_sqlserver_host -%>"
       port: "<%= @petl_sqlserver_port -%>"
       databaseName: "<%= @petl_sqlserver_databaseName -%>"
       user: "<%= @petl_sqlserver_user -%>"
       password: "<%= @petl_sqlserver_password -%>"
