petl:
  homeDir: "<%= @petl_home_dir -%>"
  datasourceDir: "<%= @petl_home_dir -%>/<%= @petl_config_dir -%>/datasources"
  jobDir: "<%= @petl_home_dir -%>/<%= @petl_config_dir -%>/jobs"
  startup:
    jobs:
      - "create-partitions.yml"
      - "refresh-openmrs-data.yml"
      - "refresh-hiv-data.yml"

server:
  port: <%= @petl_server_port -%>

logging:
  level:
    root: "WARN"
    org.pih: "DEBUG"

datasources:
  mysql:
    user: "<%= @petl_mysql_user -%>"
    password: "<%= @petl_mysql_password -%>"
    options: " <%= @petl_mysql_options -%>"

  openmrs:
